<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/selector.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/selector.js" />
    </scripts>
    <!--<snippets>-->
    <!--</snippets>-->
    <Panel class="selector_Root" hittest="false" >
        <Label class="" id="TooltipLabel" text="#tooltip" />
        <Panel class="YesNoSelector" id="YesNoSelector">
            <Label id="SelectorMsg" text="Do you want to replace the minion on this line?" />
            <Panel class="ButtonContainer">
                <Button id="YesButton" onactivate="OnClickYes()">
                    <Label text="YES" />
                </Button>
                <Button id="NoButton" onactivate="OnClickNo()">
                    <Label text="NO" />
                </Button>
            </Panel>
        </Panel>
        
    </Panel>
</root>