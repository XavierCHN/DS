<root>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/card.js" />
		<include src="file://{resources}/scripts/custom_game/hand_panel.js" />
	</scripts>
	
	<styles>
		<include src="file://{resources}/styles/custom_game/hand.css" />
	</styles>

	<snippets>
		<!--卡背-->
		<snippet name="CardBack">
			<Panel class="CardRoot">
				
			</Panel>
		</snippet>
		<!--卡牌-->
		<snippet name="Card">
			<Panel class="CardRoot">
				<Panel class="CardContent">
					<Panel class="CardTitlePanel">
						<Label class="text-h1" id="CardName" />
						<Panel id="CardCost">
							<Panel id="CardCost_Mana">
							</Panel>
							<Panel id="CardCost_Attributes">
							</Panel>
						</Panel>
					</Panel>
					<Panel class="CardIllusionPanel">
						<Image id="CardIllusion" class="CardIllusion"/>
					</Panel>
					<Panel class="CardTypePanel">
						<Label id="CardType" class="text-h1" text="#test_card_type" />
					</Panel>
					<Panel class="CardDescriptionPanel">
						<Panel class="CardDescription_Ability_Lore">
							<Label class="text-h2" id="CardDescription" text="#test_card_description" />
							<Label class="text-h3" id="CardLore" text="#test_card_lore" />
						</Panel>
						<Panel class="CardDescription_ExtraMessage">
							<Label id="CardID" />
							<Label id="IllusionArtist" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	<Panel class="HandRoot" hittest="false">
		<Panel id="HandCardContainerBackground" hittest="false">
			<Panel id="EnemyHandCardContainer" hittest="false" />
			<Panel id="HandCardContainer" hittest="false" />
		</Panel>
	</Panel>
</root>
