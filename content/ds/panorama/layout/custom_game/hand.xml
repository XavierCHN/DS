<root>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/card.js" />
		<include src="file://{resources}/scripts/custom_game/hand_panel.js" />
	</scripts>
	
	<styles>
		<include src="file://{resources}/styles/custom_game/hand.css" />
	</styles>

	<snippets>
		<!--卡背-->
		<snippet name="CardBack">
			<Panel class="CardRoot">
				
			</Panel>
		</snippet>
		<!--卡牌-->
		<snippet name="Card">
			<Panel class="CardRoot">
				<Panel id="Background">
					<Panel id="TopCardSection">
						<Image id="CardIllusion" />
						<Panel id="CardCost">
							<Panel id="CardCost_Mana">
							</Panel>
							<Panel id="CardCost_Attributes">
							</Panel>
						</Panel>
						<Panel id="CardTitle">
							<Panel id="CardTitleBackground" />
							<Panel id="CardTitleLabels">
								<Label id="CardName" text="#test_card_title"/>
								<Label id="CardType" text="#test_card_type" />
							</Panel>
						</Panel>
					</Panel>
					<Panel id="BottomCardSection">
						<Label id="CardDescription" text="#test_card_description" />
						<Label id="CardLore" text="#test_card_lore" />
						<Panel id="CardMessage">
							<Label id="CardID" />
							<Label id="IllusionArtist" />
						</Panel>
					</Panel>
				</Panel>
				<Panel id="CardOverlay" hittest="false" />
			</Panel>
		</snippet>
	</snippets>
	
	<Panel class="HandRoot" hittest="false">
		<Panel id="HandCardContainerBackground" hittest="false">
			<Panel id="HandCardContainer" hittest="false">
			</Panel>
		</Panel>
	</Panel>
</root>
